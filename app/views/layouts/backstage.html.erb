<SCRIPT language=javascript>
var clockbgcolor = 'INFOBACKGROUND';  //背景颜色
var clockfgcolor = 'INFOTEXT';    //文字颜色
var clockborder=1;      //边框宽度（为0表示不要边框）
function clocktick() {
thistime = new Date();  
//alert(thistime)    //得到当前日期对象。
year = thistime.getFullYear();
month = thistime.getMonth() + 1;  //因为getMonth方法返回的月份值是从0-11,需要加一才能符合习惯
day = thistime.getDate();
hours = thistime.getHours();
minutes = thistime.getMinutes();
seconds = thistime.getSeconds();
//alert(year)
//如果时间为一位数，则在前面补零
if (eval(hours) <10)  {hours = "0" + hours}
if (eval(minutes) < 10) {minutes = "0" + minutes}
if (seconds < 10) {seconds = "0" + seconds}
thistime = year + '年' + month + '月' + day + '日';
thistime = thistime + '<br>' + hours + ":" + minutes + ":" + seconds;
if (clockborder!=0)     //如果边框不为0，则加入表格边框
//生成消息内容的HTML串
thistime='<table border='+clockborder+' width=100% height=100%><tr><td style="text-align:center ;color:blue">'+thistime+'</td></tr></table>'
clockdiv.innerHTML = thistime;    //写入页面
}
//这里写入所显示需要的层
//document.getElementById("nowtime").innerHTML=clockbgcolor
document.writeln('<div style="height:80px;width:257px;border:1px solid #CCC;background-color:#99ccff;position:absolute; left:140px;top:130px; font-size:1.5em;", id="clockdiv"></div>')
//设定自动刷新显示的计时器
setInterval("clocktick()",1000);
//资源来自：烈火网 www.veryhuo.com
</SCRIPT>