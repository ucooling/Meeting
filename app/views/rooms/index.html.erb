<table class="table table-bordered table-hover">
  <tr>
    <th>会议室</th>
    <th>楼层</th>
    <th>IP地址</th>
    <th>电视</th>
    <th>投影仪</th>
    <th>电脑</th>
    <th>摄像头</th>
    <th>有无电话</th>
    <th>隔音</th>
    <th>空调</th>
    <th>白板</th>
    <th>最大人数</th>
    <th>电话号码</th>
    <th colspan="3" style="text-align:center;">操作</th>

  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.room_name %></td>
    <td><%= room.room_floor %></td>
    <td><%= room.tv_ip %></td>
    <td><%= room.tv %></td>
    <td><%= room.projector %></td>
    <td><%= room.pc %></td>
    <td><%= room.webcam %></td>
    <td><%= room.tel %></td>
    <td><%= room.sound_proofing %></td>
    <td><%= room.air_condition %></td>
    <td><%= room.whiteboard %></td>
    <td><%= room.max_volume %></td>
    <td><%= room.tel_num %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><a href="/rooms/destroy/<%= room.id %>", onclick="return confirm('Are you sure?')">Destroy</a></td>
  </tr>
<% end %>
</table>
<%= link_to '添加新会议室', new_room_path , :class=>"btn button"%>
<div style="text-align: center;color: gray;margin-top:-30px;margin-left:100px;">
    <div class="digg_pagination">
        <div class="page_info">
            共找到<%=@rooms.total_entries %>条记录,共<%= @rooms.total_pages%>页
        </div> 
        <%= will_paginate @rooms ,:container => false,:previous_label => '<<上一页', :next_label => '下一页>>' %>
    </div>  
</div>




